    "eslintConfig": {
        "extends": [
            "react-app",
            "plugin:prettier/recommended",
            "plugin:compat/recommended"
        ],
        "rules": {
            "no-console": 2
        }
    },
    "prettier": {
        "printWidth": 120,
        "trailingComma": "es5",
        "tabWidth": 4
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run build-prod && npm run test"
        }
    },
    "lint-staged": {
        "*.+(js|jsx)": [
            "eslint --fix",
            "git add"
        ],
        "*.+(js|jsx|json|scss|md)": [
            "prettier --write",
            "git add"
        ]
    }
}
