        "@use-gesture/react": "10.2.20",
        "animated-scroll-to": "2.3.0",
        "ast-utils": "1.0.0",
        "axios": "0.21.4",
        "bigi": "1.4.2",
        "bip21": "2.0.3",
        "bip32": "1.0.4",
        "bip39": "2.6.0",
        "bitcoinjs-lib": "4.0.5",
        "bitcore-lib": "8.25.8",
