        "js-cookie": "^2.2.1",
        "jshashes": "^1.0.8",
        "long": "^4.0.0",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "path": "^0.12.7",
        "qrcode": "^1.4.1",
        "react-day-picker": "^7.4.8",
